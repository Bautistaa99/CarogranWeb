
<div class="FormSectionContainer">
    <h3>Dejenos su consulta aqui!</h3>
    <form id="form">
        <div class="formInputsContainer">
            <div class="formInputsNameEmail">
                <div class="form-group">
                    <label for="from_name">Nombre Completo *</label>
                    <input type="text" id="from_name" name="from_name" required>
                </div>
                <div class="form-group">
                    <label for="email_id">Correo Electrónico *</label>
                    <input type="email" id="email_id" name="email_id" required>
                </div>
            </div>
            <div class="formInputPhone">
                <div class="form-group">
                    <label for="phone">Teléfono</label>
                    <input type="tel" id="phone" name="phone">
                </div>
            </div>
        </div>
        <div class="form-group-textarea">
            <label for="message">Escriba un Mensaje *</label>
            <textarea id="message" name="message" rows="4" required></textarea>
        </div>
        <input type="submit" id="button" value="Enviar mensaje" class="btnEnviarEmail">
    </form>
</div>
<script src="../scripts/app.js"></script>

 